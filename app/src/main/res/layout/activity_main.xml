<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fillViewport="true"
    android:padding="15dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:text="Login"
                android:textSize="32dp"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:text="Bem vindo ao exemplo 01"
                android:textSize="18dp"
                android:textColor="#fafafa"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_edittext"
                android:hint="e-mail"
                android:textColorHint="#fff"
                android:padding="10dp"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_action_name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="senha"
                android:textColorHint="#fff"
                android:padding="10dp"
                android:textColor="#fff"
                android:inputType="textPassword"
                android:drawableRight="@drawable/ic_pass"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btLoginUserAndPass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#5C0880"
                android:text="LOGIN"
                android:textColor="#fff"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btLoginFingerPrint"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#B721FF"
                android:text="LOGAR COM BIOMETRIA"
                android:textColor="#fff"
                android:layout_gravity="bottom"/>

        </LinearLayout>

    </LinearLayout>




</androidx.core.widget.NestedScrollView>